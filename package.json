{
  "name": "low-web",
  "version": "0.0.13",
  "description": "Reduce energy consumption and carbon footprint of your internet browsing.",
  "author": "vico@lowweb.tech",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext .js,.vue src",
    "lint:fix": "eslint --ext .js,.vue src --fix",
    "start": "cross-env HMR=true npm run dev:chrome -- --watch",
    "dev:chrome": "cross-env NODE_ENV=development TARGET_BROWSER=chrome webpack --watch --mode=development --hide-modules",
    "dev:firefox": "cross-env NODE_ENV=development TARGET_BROWSER=firefox webpack --watch --mode=development --hide-modules",
    "dev:opera": "cross-env NODE_ENV=development TARGET_BROWSER=opera webpack --watch --mode=development --hide-modules",
    "build": "run-s build:chrome build:firefox build:opera",
    "build:chrome": "cross-env NODE_ENV=production TARGET_BROWSER=chrome webpack --mode=production --hide-modules",
    "build:firefox": "cross-env NODE_ENV=production TARGET_BROWSER=firefox webpack --mode=production --hide-modules",
    "build:opera": "cross-env NODE_ENV=production TARGET_BROWSER=opera webpack --mode=production --hide-modules",
    "build:report": "webpack-bundle-analyzer --port 4200 dist/chrome/stats.json",
    "watch:nohmr": "npm run build -- --watch",
    "release": "run-s build test build:zip release:chrome release:firefox",
    "release:firefox": "web-ext-submit --source-dir dist/firefox",
    "release:chrome": "webstore upload --source=dist/chrome --auto-publish",
    "test": "jest",
    "test:src": "jest src",
    "test:screenshot": "jest test/screenshots.test.js"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.vue$": "vue-jest"
    },
    "setupFiles": [
      "jest-webextension-mock",
      "dotenv/config"
    ]
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Edge versions"
  ],
  "dependencies": {
    "abp-filter-parser": "^0.2.0",
    "chrome-webstore-upload-cli": "^1.2.0",
    "content-scripts-register-polyfill": "^1.0.5",
    "dompurify": "^2.1.1",
    "dotenv": "^8.2.0",
    "fs": "0.0.1-security",
    "minimist": "^1.2.5",
    "node-png": "^0.4.3",
    "path": "^0.12.7",
    "query-string": "^6.13.4",
    "srcset": "^3.0.0",
    "tiny-emitter": "^2.1.0",
    "vue": "^2.6.12",
    "vuex": "^3.5.1",
    "vuex-webextensions": "^1.3.0",
    "web-ext-submit": "^5.1.0",
    "webextension-polyfill": "^0.7",
    "wext-manifest": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.0",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/preset-env": "^7.12.0",
    "@babel/runtime-corejs3": "^7.11.2",
    "@vue/test-utils": "^1.1.0",
    "archiver": "^5.0.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.5.2",
    "babel-loader": "^8.1.0",
    "babel-preset-vue": "^2.0.2",
    "copy-webpack-plugin": "^6.1.1",
    "core-js": "^3.6.5",
    "cross-env": "^7.0",
    "css-loader": "^4.3",
    "ejs": "^3.1.5",
    "eslint": "^8.0",
    "eslint-config-standard": "^16.0",
    "eslint-plugin-import": "^2.25",
    "eslint-plugin-jest": "^25.0",
    "eslint-plugin-node": "^11.1",
    "eslint-plugin-promise": "^5.1",
    "eslint-plugin-standard": "^5.0",
    "eslint-plugin-vue": "^7.19",
    "file-loader": "^6.1.0",
    "html-loader": "^1.3.1",
    "jest": "^26.5.3",
    "jest-puppeteer": "^4.4.0",
    "jest-transform-stub": "^2.0.0",
    "jest-webextension-mock": "^3.7.0",
    "mini-css-extract-plugin": "^0.11",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "pixelmatch": "^5.2.1",
    "puppeteer": "^5.3.1",
    "raw-loader": "^4.0",
    "sass-loader": "^10.0.2",
    "vue-jest": "^3.0.7",
    "vue-loader": "^15.9.3",
    "vue-template-compiler": "^2.6.12",
    "web-ext-types": "^3.2",
    "webpack": "^4.44.2",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^3.3.12",
    "webpack-extension-reloader": "^1.1.4",
    "write-webpack-plugin": "^1.1.0"
  }
}
